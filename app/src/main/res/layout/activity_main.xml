<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        android:background="@drawable/page_1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/muli_bold"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:text="Water delivery"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/muli_light"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="We deliver water at any point of earth\nin just 30 minutes"/>

        <LinearLayout
            android:id="@+id/mainLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/main_login_btn_shape"
            android:layout_marginRight="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:textColor="#0066ff"
                android:textSize="16sp"
                android:fontFamily="@font/muli_bold"
                android:layout_height="wrap_content"
                android:text="Log in"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/mainSignUpBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/main_signup_btn_shape"
            android:layout_marginRight="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/muli_bold"
                android:layout_height="wrap_content"
                android:text="Sign Up"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>